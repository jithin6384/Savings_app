
<%= render 'shared/errors', obj: @account %>




<div class='row'>
	<div class='col-xs-12'>

	  <%= form_for(@account, :html => {class: "form-horizontal", role: "form"}) do |f| %>

	<div class="form-group">

	<div class="control-label col-sm-2">

	 <%= f.label :items_brought %>

	</div>

	<div class="col-sm-8">

	 <%= f.text_field :items_brought, class: "form-control", placeholder: "items brought ", autofocus: true %>

	</div>

</div>

<div class="form-group">

	<div class="control-label col-sm-2">

	 <%= f.label :amount_spent %>

	</div>

	<div class="col-sm-8">

	<%= f.text_field :amount_spent, rows: 10, class: "form-control", placeholder: "Amount spent" %>

	</div>

</div>

<div class="form-group">

	<div class="col-sm-offset-2 col-sm-10">

	<%= f.submit class: 'btn btn-primary btn-lg' %>

	</div>

</div>

<% end %>

<div class="col-xs-4 col-xs-offset-4">

 [ <%= link_to "Cancel request and return to articles listing", accounts_path %> ]

</div>
</div>
</div>


